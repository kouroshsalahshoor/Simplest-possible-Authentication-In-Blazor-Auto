@page "/"

<PageTitle>Home</PageTitle>

@* <AuthorizeView Roles="Admin"> *@
<AuthorizeView Roles="User">
    <Authorized>
        <h1 class="text-success">You are authorized!</h1>
        Welcome @context.User.Identity.Name
        <p>Email: @context.User.Claims.FirstOrDefault(x=>x.Type == ClaimTypes.Email).Value</p>
        <p>Role: @context.User.Claims.FirstOrDefault(x=>x.Type == ClaimTypes.Role).Value</p>
    </Authorized>
    <NotAuthorized>
        <h1 class="text-danger">You are NOT authorized!</h1>
    </NotAuthorized>
    @* <Authorizing>
        Authorizing from Home
    </Authorizing> *@
</AuthorizeView>

